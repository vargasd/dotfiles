hide_window_decorations yes
allow_remote_control yes
cursor_blink_interval 0
enable_audio_bell no
font_family JetBrainsMono Nerd Font Mono Bold
bold_font JetBrainsMono Nerd Font Mono ExtraBold
italic_font JetBrainsMono Nerd Font Mono Bold Italic
bold_italic_font JetBrainsMono Nerd Font Mono ExtraBold Italic

font_size 16
inactive_text_alpha 0.5
macos_option_as_alt both
startup_session ~/.config/kitty/session.sh
tab_title_template "{title}"

mouse_map left click ungrabbed no_op
map cmd+, no_op

# BEGIN_KITTY_THEME
# Gruvbox Dark Hard
include current-theme.conf
# END_KITTY_THEME
